@page "/course-registration"

<h1>Course Registration Form</h1>

<EditForm Model="courseRegistrationModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container">
        <div class="form-container w-50">
            <div class="form-group">
                <label>Full Name</label>
                <input class="form-control" @bind="courseRegistrationModel.FullName" />
                <ValidationMessage For="@(() => courseRegistrationModel.FullName)" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" @bind="courseRegistrationModel.Email" />
                <ValidationMessage For="@(() => courseRegistrationModel.Email)" />
            </div>

            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control" @bind="courseRegistrationModel.PhoneNumber" />
                <ValidationMessage For="@(() => courseRegistrationModel.PhoneNumber)" />
            </div>

            <div class="form-group">
                <label>Select Course</label>
                <select class="form-control" @bind="courseRegistrationModel.SelectedCourse">
                    <option value="">Choose.....</option>
                    <option value="course1">Course 1</option>
                    <option value="course2">Course 2</option>
                    <option value="course3">Course 3</option>
                </select>
                <ValidationMessage For="@(() => courseRegistrationModel.SelectedCourse)" />
            </div>

            <div class="form-group">
                <label>Learning Method</label>
                <div>
                    <input type="radio" id="online" name="learningMethod" @bind="courseRegistrationModel.LearningMethod" />
                    <label for="online">Online</label>
                </div>
                <div>
                    <input type="radio" id="offline" name="learningMethod" @bind="courseRegistrationModel.LearningMethod" />
                    <label for="offline">Offline</label>
                </div>
                <ValidationMessage For="@(() => courseRegistrationModel.LearningMethod)" />
            </div>

            <div class="form-group">
                <label>Desired Start Date</label>
                <input type="date" class="form-control" @bind="courseRegistrationModel.StartDate" />
                <ValidationMessage For="@(() => courseRegistrationModel.StartDate)" />
            </div>

            <div class="form-group">
                <label>Comments or Notes</label>
                <textarea class="form-control" @bind="courseRegistrationModel.Comments" rows="4" style="resize: none;"></textarea>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" @bind="courseRegistrationModel.AgreeToTerms" />
                <label class="form-check-label">I agree to the terms and policies</label>
                <ValidationMessage For="@(() => courseRegistrationModel.AgreeToTerms)" />
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
</EditForm>

@code {
    private CourseRegistrationModel courseRegistrationModel = new CourseRegistrationModel();

    private void HandleValidSubmit()
    {
        // Handle the form submission
        Console.WriteLine("Form submitted successfully!");
    }
}